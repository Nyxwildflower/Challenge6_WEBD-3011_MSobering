<div class="box is-radiusless column is-one-fifth is-full-mobile  mx-3">
  <h2 class="has-text-weight-bold is-size-5"><%= customer.full_name %></h2>

  <% if customer.avatar.attached? %>
    <div class="mx-2">
      <%= image_tag(customer.avatar) %>
    </div>
  <% end %>

  <p class="mt-3 is-size-7"><%= customer.phone_number %></p>
  <p class="mt-5 is-size-7"><%= customer.email_address %></p>
</div>